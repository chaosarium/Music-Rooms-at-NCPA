<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Practise Room Sign-up</title>
  <link rel="icon" href="/favicons/favicon.ico">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <div class="container">
    <h1 class="mt-4">Practise Room Sign-up <sup>beta</sup></h1>
    <h3 class="mt-4"><%= roomOccupationStatus %></h3>

    <form action="/cancel" method="POST">

      <!-- information for cnacel request -->

      <div class="form-group d-none">
        <input type="text" id="fullName" name="fullName" value="<%= fullName %>" />
      </div>

      <div class="form-group d-none">
        <input type="text" id="studentID" name="studentID" value="<%= studentID %>" />
      </div>


      <div class="form-group">
        <input type="text" required="required" placeholder="<%= date %>" readonly disabled/>
        <label for="input" class="control-label">Date</label><i class="bar"></i>
      </div>

      <div class="form-group">
        <input type="text" required="required" placeholder="<%= room %>" readonly disabled/>
        <label for="input" class="control-label">Room</label><i class="bar"></i>
      </div>

      <div class="form-group">
        <input type="text" required="required" placeholder="<%= time.substr(1, 2) + ":" + time.substr(3, 2) + "-" + time.substr(5, 2) + ":" + time.substr(7, 2) %>" readonly disabled/>
        <label for="input" class="control-label">Time</label><i class="bar"></i>
      </div>

      <div class="form-group">
        <input type="text" required="required" placeholder="<%= fullName %>" readonly disabled/>
        <label for="input" class="control-label">Full Name</label><i class="bar"></i>
      </div>

      <div class="form-group">
        <input type="text" required="required" placeholder="<%= grade %>" readonly disabled/>
        <label for="input" class="control-label">Grade</label><i class="bar"></i>
      </div>

      <div class="form-group">
        <input type="text" required="required" placeholder="<%= studentID %>" readonly disabled/>
        <label for="input" class="control-label">Student ID</label><i class="bar"></i>
      </div>

      <div class="checkbox">
        <label class="pure-material-checkbox">
          <input type="checkbox" name="ensembleCheckbox" disabled <% if (ensembleStatus == true) { %> checked <% } %>>
          <span>Small Ensemble</span>
        </label>
      </div>

      <!-- <div class="form-group">
        <input type="text" required="required" placeholder="<%= remark %>" readonly disabled/>
        <label for="input" class="control-label">Remark</label><i class="bar"></i>
      </div> -->

      <div class="form-group">
        <textarea id="remark" id="remark" name="remark" placeholder="<%= remark %>" readonly disabled></textarea>
        <label for="textarea" class="control-label">Remark</label><i class="bar"></i>
      </div>

      <a class="btn btn-primary" href="/">Back</a>
      <a class="btn btn-primary" href="/help">Help</a>
      <button class="btn btn-primary" type="submit">Cancel Request</button>

    </form>


    <!-- <a class="btn btn-primary mt-4" href="/">Back</a> -->
    <!-- <a class="btn btn-primary mt-4" href="/help">Help</a> -->
    <!-- <a class="btn btn-primary mt-4" href="/cancel">Cancel Request</a> -->


    <h3 class="mt-5">Debug info:</h3>
    <p><small class="text-muted">from info.ejs</small></p>
    <p><small>Data = <%= date %></small></p>
    <p><small>Data = <%= room %></small></p>
    <p><small>Data = <%= time %></small></p>
    <p><small>Data = <%= fullName %></small></p>
    <p><small>Data = <%= grade %></small></p>
    <p><small>Data = <%= studentID %></small></p>
    <p><small>Data = <%= ensembleStatus %></small></p>
    <p><small>Data = <%= remark %></small></p>
    <p><small>Data = <%= JSON.stringify(organisedData) %></small></p>


  </div>


  <!-- JQuery -->
  <!-- <script type="text/javascript" src="/js/jquery-3.4.0.min.js"></script> -->
  <!-- Bootstrap tooltips -->
  <!-- <script type="text/javascript" src="/js/popper.min.js"></script> -->
  <!-- Bootstrap core JavaScript -->
  <!-- <script type="text/javascript" src="/js/bootstrap.js"></script> -->
  <script src="/js/main.js"></script>
</body>
</html>